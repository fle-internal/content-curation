<div class="pull-right">
	<a class="action-text download_pdf" title="Download PDF of public channels" download>Download PDF</a>
	<a class="action-text" href="/api/download_channel_csv/" download>Download CSV</a>
</div>
<div class="table_actions">
	<div class="action_grid">
		<div>
			<label>View</label>
			<select id="admin_channel_view" class="filter_input view_input channels">
				{{#each filterOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="filter_input">
			<label>Sort By</label>
			<select id="admin_channel_sort" class="filter_input sort_input channels">
				{{#each sortFilterOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="filter_input">
			<label>Order</label>
			<select id="admin_channel_order" class="filter_input order_input channels">
				{{#each sortOrderOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</div>
		<div class="search">
			<input type="text" id="admin_channel_search" placeholder="Search..." class="search_input" value="{{collectionState.search}}" />
		</div>
	</div>
</div>
<div id="admin_channel_table_wrapper" class="admin_table_wrapper"></div>
<nav aria-label="Channel list page navigation">
  <ul class="pagination">
    <li class="page-item {{#if disable_previous_page_button}}disabled{{/if}}" {{#if disable_previous_page_button}}aria-disabled="true"{{/if}}>
		<a class="page-link channels previous">Previous</a>
	</li>
	{{#each pages}}
    <li class="page-item {{#if current_page}}active{{/if}}"><a class="page-link channels page" data-page={{page_number}}>{{page_number}}</a></li>
	{{/each}}
    <li class="page-item {{#if disable_next_page_button}}disabled{{/if}}" {{#if disable_next_page_button}}aria-disabled="true"{{/if}}>
		<a class="page-link channels next">Next</a>
	</li>
  </ul>
</nav>