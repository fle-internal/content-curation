<p class="viewing_count"></p>
<div class="table_actions">
	<button class="action-button email_button disabled pull-right" id="email_selected" disabled><i class="material-icons">email</i>&nbsp; <span class="email_button_text">Select Users...</span></button></li>
	<ul class="list-inline action_list">
		<li><input type="checkbox" id="admin_user_select_all" class="select_all"><label for="admin_user_select_all">Select All</label></li>
		{{!-- <li class="filter_input">
			<label>Users For</label>
			<select id="admin_user_channel" class="filter_input extra_input users">
				{{#each extra_filters}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</li> --}}
		<li>
			<label>View</label>
			<select id="admin_user_view" class="filter_input view_input users">
				{{#each filterOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li class="filter_input">
			<label>Sort By</label>
			<select id="admin_user_sort" class="filter_input sort_input users">
				{{#each sortFilterOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li class="filter_input">
			<label>Order</label>
			<select id="admin_user_order" class="filter_input order_input users">
				{{#each sortOrderOptions}}<option {{#if selected}}selected{{/if}} value="{{@key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li><input type="text" id="admin_user_search" placeholder="Search..." class="search_input users"/></li>
	</ul>
</div>

<div id="admin_user_table_wrapper" class="admin_table_wrapper"></div>
<nav aria-label="Channel list page navigation">
  <ul class="pagination">
	{{#if show_previous_page_button}}
    <li class="page-item"><a class="page-link users previous">Previous</a></li>
	{{/if}}
	{{#each pages}}
    <li class="page-item {{#if current_page}}active{{/if}}"><a class="page-link users page" data-page={{page_number}}>{{page_number}}</a></li>
	{{/each}}
	{{#if show_next_page_button}}
    <li class="page-item"><a class="page-link users next">Next</a></li>
	{{/if}}
  </ul>
</nav>