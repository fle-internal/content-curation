<div class="item_wrapper">
	<input type="checkbox" id="archive_item_{{node.id}}_check" class="archive_checkbox"></input>
	<label for="archive_item_{{node.id}}_check" class="archive_item {{#if node.children}}tog_folder{{/if}}" title="{{node.title}}">
		{{#unless isfolder}}<div class="glyphicon glyphicon-{{#get_icon node.kind}}{{/get_icon}}"></div>{{/unless}}
		<div class="archive_item_title truncate modal-item-title-default">{{node.title}}</div>
		<i class="modal-item-metadata-default size_counter" id="archive_item_{{node.id}}_count">&nbsp;</i>
		{{#if isfolder}}
			<div id="archive_item_{{node.id}}_options"></div>
		{{/if}}
		<div class="archive_item_controls">
			<div class="restore_content restore_icon glyphicon glyphicon-share-alt" aria-hidden="true" title="Restore"></div>
			<div class="delete_content glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></div>
		</div>
	</label>
</div>

{{#if node.children}}
	<div id="archive_item_{{node.id}}_sub" class="subdirectory"><em class="default-item">Loading...</em></div>
{{/if}}