<div class="modal fade" id="export_modal" tabindex="-1">
    <div class="input-tab-control tab_item" data-next="#export_cancel"></div>
    <div class="modal-dialog">
        <div class="modal-content modal-dialog-default" id="export_modal_content">
            <div class="modal-header">
                <button type="button" class="close tab_item" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{formatMessage (intlGet 'messages.publishing_channel')}}</h4>
            </div>
            <div class="modal-body">
                <div id="export_area">
                    <h3 class="export_channel_name truncate" title="{{channel.name}}">{{channel.name}}</h3>
                    <em id="version_number">{{formatMessage (intlGet 'messages.current_version')}} {{version}}</em>
                    <hr/>
                    <div class="language_wrapper container-fluid">
                        <select id="select_language" class="tab_item pull-right">
                            <option disabled selected value=0>{{formatMessage (intlGet 'messages.select_language')}}</option>
                            {{#each languages}}<option value="{{id}}" title="{{readable_name}}">{{readable_name}}</option>{{/each}}
                        </select>
                        <b class="language_label pull-right">{{formatMessage (intlGet 'messages.language_label')}}&nbsp;</b>
                        <i class="select_language_prompt">{{formatMessage (intlGet 'messages.channel_language')}}</i>
                    </div>
                    <p>{{formatMessage (intlGet 'messages.publish_text')}}</p>
                    <div id="export_preview" class="modal-content-default"></div>
                    <div id="export_buttons" class="modal-bottom-content-default">
                        <button class="action-button pull-right tab_item modal-main-action-button first_focus_item" id="publish_btn">{{formatMessage (intlGet 'messages.publish')}}</button>
                        <span id="export_totals" class="pull-right modal-status-text">
                            {{formatMessage (intlGet 'messages.resource_count') count=resource_count}}
                            <em class="annotation" id="export_size">{{formatMessage (intlGet 'messages.calculating')}}</em>
                        </span>
                        <button class="action-text tab_item uppercase" id="export_cancel" data-dismiss="modal">{{formatMessage (intlGet 'messages.cancel')}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="input-tab-control tab_item" data-next="#select_language"></div>
</div>
