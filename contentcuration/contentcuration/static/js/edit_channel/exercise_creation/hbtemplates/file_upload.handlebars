<input type="text" id="alt_text_box" placeholder="Enter text to display if image fails to load" value="{{alt_text}}"/>
<div id="dropzone" class="text-center">
	{{#if file}}
		<img id="dropzone_placeholder" alt="Error loading image" src="{{file.filepath}}"/>
	{{else}}
		<div id="dropzone_placeholder"><div id="placeholder_text">Click or drop file here...</div></div>
	{{/if}}
</div>
<div class="modal-buttons">
    <button class="action-button pull-right {{#unless file}}disabled{{/unless}}" id="submit_file" {{#unless file}}disabled{{/unless}}>
        <span>USE</span>
    </button>
    <a class="action-text" data-dismiss="modal">
        <span>CANCEL</span>
    </a>
</div>
