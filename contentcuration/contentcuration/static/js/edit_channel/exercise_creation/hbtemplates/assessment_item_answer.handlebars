<li class="answer_item {{#if allow_toggle}}toggle_answer{{/if}}">
	<div class="row">
		{{#unless input_answer}}
		<div class="col-sm-1 text-center">
		 		<input class="correct" type="{{#if single_selection}}radio{{else}}checkbox{{/if}}" aria-label="Correct" name="{{#if isdisplay}}display_{{/if}}answer_{{groupName}}" {{#unless allow_toggle}}disabled{{/unless}} {{#if answer.correct}}checked{{/if}}>
		</div>
		{{/unless}}
		<div class="col-sm-{{#if input_answer}}11{{else}}10{{/if}}">
			<div class="answer editable" data-ph="Answer"></div>
		</div>
		<div class="col-sm-1">
			<div class="show_on_focus answer-toolbar pull-right"></div>
		</div>
    </div>
</li>