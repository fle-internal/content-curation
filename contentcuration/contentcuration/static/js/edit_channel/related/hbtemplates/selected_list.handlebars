<div class="prereq_header_row container-fluid">
	<div class="col-xs-6">{{formatMessage (intlGet 'messages.name')}}</div>
	<div class="col-xs-6">{{{translate "topic"}}}</div>
</div>
<div id="selected_prerequisites"></div>
{{#if allow_edit}}
<div class="prereq_row prereq_add_row container-fluid">
	<div class="col-xs-12 prereq_cell"><a class="action-text add_prereq">
		<i class="material-icons align-bottom">add</i> <span class="uppercase">{{formatMessage (intlGet 'messages.add')}}</span></a>
		<span class="add_warning">{{formatMessage (intlGet 'messages.prereq_limit') count=prereq_limit}}</span>
	</div>
</div>
{{else}}
	<div class="empty_default"></div>
{{/if}}
