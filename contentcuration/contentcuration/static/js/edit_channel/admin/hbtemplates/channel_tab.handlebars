<div class="pull-right">
	<a class="action-text download_pdf" title="Download PDF of public channels" download>Download PDF</a>
	<a class="action-text" href="/api/download_channel_csv/" download>Download CSV</a>
</div>
<p class="viewing_count"></p>
<div class="table_actions container-fluid">
	<ul class="list-inline action_list">
		<li class="filter_input">
			<label>Channels For</label>
			<select id="admin_channel_user" class="filter_input extra_input">
				{{#each extra_filters}}<option {{#if selected}}selected{{/if}} value="{{key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li>
			<label>View</label>
			<select id="admin_channel_view" class="filter_input view_input">
				{{#each filters}}<option {{#if selected}}selected{{/if}} value="{{key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li class="filter_input">
			<label>Sort By</label>
			<select id="admin_channel_sort" class="filter_input sort_input">
				{{#each sort_filters}}<option {{#if selected}}selected{{/if}} value="{{key}}">{{label}}</option>{{/each}}
			</select>
		</li>
		<li class="filter_input">
			<label>Order</label>
			<select id="admin_channel_order" class="filter_input order_input">
				<option selected value="ascending">Ascending</option>
				<option value="descending">Descending</option>
			</select>
		</li>
		<li><input type="text" id="admin_channel_search" placeholder="Search..." class="search_input"/></li>
	</ul>
</div>
<div id="admin_channel_table_wrapper"></div>
<nav aria-label="Channel list page navigation">
  <ul class="pagination">
	{{#if show_previous_page_button}}
    <li class="page-item"><a class="page-link channels previous">Previous</a></li>
	{{/if}}
	{{#each pages}}
    <li class="page-item {{#if current_page}}active{{/if}}"><a class="page-link channels page" data-page={{page_number}}>{{page_number}}</a></li>
	{{/each}}
	{{#if show_next_page_button}}
    <li class="page-item"><a class="page-link channels next">Next</a></li>
	{{/if}}
  </ul>
</nav>