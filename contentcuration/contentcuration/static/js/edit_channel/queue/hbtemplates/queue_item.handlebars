<div> <!-- Added to make jquery sortable more robust -->
<input type="checkbox" id="queue_file_{{node.id}}" {{#if checked}}checked{{/if}}></input>
<label for="queue_file_{{node.id}}" class="queue_item tog_folder">
	<div class="queue-options pull-right">
		<a class="btn content-options-dropdown" role="button" rel="popover">
			<i class="material-icons">more_horiz</i>
		</a>
	</div>
	<div class="queue_item_title title truncate {{#unless isfolder}}file_item{{/unless}}" title="{{node.title}}">
		{{#unless isfolder}}<i class="content-item-icon material-icons">{{{get_icon node.kind}}}</i>&nbsp;{{/unless}}
		{{node.title}}
	</div>
	{{#if isfolder}}
		<div class="badge clipboard-topic-count">{{node.metadata.resource_count}}</div>
		<span id="menu_toggle_{{node.id}}" class="material-icons toggle-icon">expand_less</span>
	{{/if}}
</label>

{{#if isfolder}}<div id="{{node.id}}_sub" class="subdirectory wrapper"></div>{{/if}}

<div class="popover content-popover" tabindex="0" role="tooltip" id="queue_option_{{node.id}}">
	<div class="arrow"></div>
	<div class="popover-content">
		<div class="edit_content option">{{formatMessage (intlGet 'messages.edit')}}</div>
		<div class="copy_content option">{{formatMessage (intlGet 'messages.make_copy')}}</div>
		<div class="move_content option">{{formatMessage (intlGet 'messages.move')}}</div>
		<div class="delete_content option">{{formatMessage (intlGet 'messages.delete')}}</div>
	</div>
</div>

<nav class="context-menu hide_on_drag" tabindex="0">
	<div class="edit_content context-option">{{formatMessage (intlGet 'messages.edit')}}</div>
	<div class="copy_content context-option">{{formatMessage (intlGet 'messages.make_copy')}}</div>
	<div class="move_content context-option">{{formatMessage (intlGet 'messages.move')}}</div>
	<div class="delete_content context-option">{{formatMessage (intlGet 'messages.delete')}}</div>
</nav>
</div>