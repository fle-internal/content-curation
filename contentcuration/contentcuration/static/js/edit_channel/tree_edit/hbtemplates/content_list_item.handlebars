<input type="checkbox" id="item_{{node.id}}" class="list_item_wrapper" {{#if checked}}checked{{/if}}/>
{{#if isfolder}}
	<label class="list_item_wrapper folder collapsed open_folder" for="folder_{{node.id}}" title="{{node.title}}">
{{else}}
	<label class="list_item_wrapper file" for="item_{{node.id}}" title="{{node.title}}">
{{/if}}
		<div class="options pull-right">
			{{#if edit_mode}}
				<a class="btn btn-default content-options-dropdown" role="button" rel="popover">
					<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
				</a>
				{{#if isfolder}}<span class="folder_open_icon open_folder glyphicon glyphicon-menu-right" aria-hidden="true"></span>{{/if}}
			{{else}}
				<span class="glyphicon glyphicon-copy copy_item_button" aria-hidden="true"></span>
			{{/if}}
		</div>
		<h6 class="content_metadata_summary {{#unless isfolder}}open_file{{/unless}}">
			<span class="metadata_to_hide">
				{{#if time}}&nbsp;<span class="glyphicon glyphicon-time" aria-hidden="true"></span>{{time}}{{/if}}
				{{#if isfolder}}&nbsp;{{#format_count "Resource" node.metadata.resource_count}}{{/format_count}}{{/if}}
				&nbsp;
				{{#if isexercise}}
					<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
					{{#format_count "Question" node.assessment_items.length}}{{/format_count}}
				{{else}}
					<span class="glyphicon glyphicon-file" aria-hidden="true"></span>
					{{#format_file_size node.metadata.resource_size}}{{/format_file_size}}
				{{/if}}
				&nbsp;
				{{#if node.changed}}
					<em class="unpublished">{{#if node.published}}Updated{{else}}New{{/if}}</em>
				{{/if}}
				{{#unless node.valid}}
					<em class="invalid">Incomplete</em>
				{{/unless}}
			</span>
		</h6>
		<div class="{{#unless isfolder}}open_file{{/unless}} title_wrapper">
			<h3 class = "title truncate">
				<div class="content-item-icon pull-left">
					{{#if isfolder}}
						<img src="/static/img/topic.png"/>
					{{else}}
						<span class="{{#get_icon node.kind}}{{/get_icon}}" aria-hidden="true"></span>
					{{/if}}
				</div>
				{{#if node}}{{node.title}}{{else}}<em>[Untitled]</em>{{/if}}
			</h3>
			<div class="description_wrapper">
				<div class="description" title="{{node.description}}">
					<div class="description_main wordwrap">{{description_first}}</div>
					<div class="description_overflow wordwrap">{{description_overflow}}</div>
					{{#if description_overflow}}<a class="toggle_description">... More</a>{{/if}}
				</div>
			</div>
		</div>
</label>
<div class="popover content-popover" tabindex="0" role="tooltip" id="options_{{node.id}}">
	<div class="arrow"></div>
	<div class="popover-content">
		{{#if isfolder}}<div class="add_subtopic_item_button option">Add Subtopic</div>{{/if}}
		<div class="edit_item_button option">Edit</div>
		<div class="copy_item_button option">Copy</div>
		<div class="delete_item_button option">Delete</div>
	</div>
</div>

<nav class="context-menu" tabindex="0">
  	{{#if isfolder}}<div class="add_subtopic_item_button context-option">Add Subtopic</div>{{/if}}
	<div class="edit_item_button context-option">Edit</div>
	<div class="copy_item_button context-option">Copy</div>
	<div class="delete_item_button context-option">Delete</div>
</nav>
</div>