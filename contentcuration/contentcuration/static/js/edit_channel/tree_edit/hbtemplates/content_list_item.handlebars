<div> <!-- Added to make jquery sortable more robust -->
<input type="checkbox" id="item_{{node.id}}" class="list_item_wrapper" {{#if checked}}checked{{/if}}/>
{{#if isfolder}}
	<label class="list_item_wrapper folder collapsed open_folder" for="folder_{{node.id}}" title="{{node.title}}">
{{else}}
	<label class="list_item_wrapper file" for="item_{{node.id}}" title="{{node.title}}">
{{/if}}
		<div class="options pull-right hide_on_drag">
			{{#if edit_mode}}
				<a class="btn btn-default content-options-dropdown" role="button" rel="popover">
					<i class="material-icons">more_horiz</i>
				</a>
				<br/>
				{{#if isfolder}}<i class="folder_open_icon open_folder material-icons">chevron_right</i>{{/if}}
			{{else}}
				{{#if isfolder}}<i class="material-icons edit_item_button" title="{{formatMessage (intlGet 'messages.view_topic')}}">pageview</i>{{/if}}
				<i class="material-icons copy_item_button" title="{{formatMessage (intlGet 'messages.copy_to_clipboard')}}">content_paste</i>
			{{/if}}
		</div>
		<h6 class="content_metadata_summary hide_on_drag {{#unless isfolder}}open_file{{/unless}}">
			<span class="metadata_to_hide">
				{{#if isfolder}}
					{{#if node.metadata.coach_count}}
						<span class="visibility" title="{{formatMessage (intlGet 'messages.coach_topic_title')}}">
							<i class="icon-blue material-icons">local_library</i>
							({{node.metadata.coach_count}})
						</span>
					{{/if}}
				{{/if}}
				{{#if time}}&nbsp;<i class="material-icons">access_time</i>{{time}}{{/if}}
				{{#if isfolder}}&nbsp;{{formatMessage (intlGet (concat 'messages.resource_count')) count=count}}&nbsp;{{/if}}
				{{#unless isfolder}}
					{{#if isexercise}}
						<i class="material-icons">check_circle</i>
						{{formatMessage (intlGet (concat 'messages.question_count')) count=count}}
					{{else}}
						<i class="material-icons">insert_drive_file</i>
						{{{format_file_size node.metadata.resource_size}}}
					{{/if}}
				{{/unless}}
				&nbsp;
				{{#if node.changed}}
					{{#if node.published}}<em class="unpublished" title="{{formatMessage (intlGet 'messages.updated')}} {{formatRelative node.modified}}">{{formatMessage (intlGet 'messages.updated')}}</em>
					{{else}}<em class="unpublished" title="{{formatMessage (intlGet 'messages.created')}} {{formatRelative node.modified}}">{{formatMessage (intlGet 'messages.new')}}</em>
					{{/if}}
				{{/if}}
				{{#unless node.valid}}
					<em class="invalid">{{formatMessage (intlGet 'messages.incomplete')}}</em>
				{{/unless}}
				{{#unless isfolder}}
					{{#equal node.role_visibility 'coach'}}
						<b class="visibility" title="{{formatMessage (intlGet 'messages.coach_title')}}">
							<i class="icon-blue material-icons">local_library</i>
							{{formatMessage (intlGet 'messages.coach')}}
						</b>
					{{/equal}}
				{{/unless}}
			</span>
		</h6>
		<div class="{{#unless isfolder}}open_file{{/unless}} title_wrapper">
			<div class = "title truncate">
				<div class="content-item-icon">
					<i class="material-icons">{{{get_icon node.kind}}}</i>
				</div>
				{{#if node}}{{node.title}}{{else}}<em>{{formatMessage (intlGet (concat 'messages.untitled'))}}</em>{{/if}}
			</div>
			<div class="description_wrapper">
				<div class="description" title="{{node.description}}">
					<div class="description_main wordwrap">{{description_first}}</div>
					<div class="description_overflow wordwrap">{{description_overflow}}</div>
					{{#if description_overflow}}<a class="toggle_description">{{formatMessage (intlGet (concat 'messages.more'))}}</a>{{/if}}
				</div>
			</div>
		</div>
</label>
<div class="popover content-popover" tabindex="0" role="tooltip" id="options_{{node.id}}">
	<div class="arrow"></div>
	<div class="popover-content">
		{{#if isfolder}}<div class="add_subtopic_item_button option" title="{{formatMessage (intlGet 'messages.subtopic')}}">{{formatMessage (intlGet 'messages.subtopic')}}</div>{{/if}}
		<div class="edit_item_button option" title="{{formatMessage (intlGet 'messages.edit')}}">{{formatMessage (intlGet 'messages.edit')}}</div>
		<div class="move_item_button option" title="{{formatMessage (intlGet 'messages.move')}}">{{formatMessage (intlGet 'messages.move')}}</div>
		<div class="delete_item_button option" title="{{formatMessage (intlGet 'messages.delete')}}">{{formatMessage (intlGet 'messages.delete')}}</div>
		<div class="make_copy_item_button option" title="{{formatMessage (intlGet 'messages.make_copy')}}">{{formatMessage (intlGet 'messages.make_copy')}}</div>
		<div class="copy_item_button option" title="{{formatMessage (intlGet 'messages.copy_to_clipboard')}}">{{formatMessage (intlGet 'messages.copy_to_clipboard')}}</div>
	</div>
</div>

<nav class="context-menu hide_on_drag" tabindex="0">
	<div class="context-header truncate" title="{{node.title}}">{{node.title}}</div>
  	{{#if isfolder}}<div class="add_subtopic_item_button context-option" title="{{formatMessage (intlGet 'messages.subtopic')}}">{{formatMessage (intlGet 'messages.subtopic')}}</div>{{/if}}
	<div class="edit_item_button context-option" title="{{formatMessage (intlGet 'messages.edit')}}">{{formatMessage (intlGet 'messages.edit')}}</div>
	<div class="move_item_button context-option" title="{{formatMessage (intlGet 'messages.move')}}">{{formatMessage (intlGet 'messages.move')}}</div>
	<div class="delete_item_button context-option" title="{{formatMessage (intlGet 'messages.delete')}}">{{formatMessage (intlGet 'messages.delete')}}</div>
	<div class="make_copy_item_button context-option" title="{{formatMessage (intlGet 'messages.make_copy')}}">{{formatMessage (intlGet 'messages.make_copy')}}</div>
	<div class="copy_item_button context-option" title="{{formatMessage (intlGet 'messages.copy_to_clipboard')}}">{{formatMessage (intlGet 'messages.copy_to_clipboard')}}</div>
</nav>
</div>
</div>