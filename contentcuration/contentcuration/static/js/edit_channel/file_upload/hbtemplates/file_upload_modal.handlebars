<div class="modal fade" id="file_upload_modal"  tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div id="upload_steps" class="row steps_row">
                    <div class="col-xs-1">&nbsp;</div>
                    <div class="col-xs-2 text-center step_wrapper enabled_step go_to_upload">
                        <span class="step_number active_number" id="upload_step_number">
                            <i class="material-icons">cloud_upload</i>
                        </span>
                        <p>{{formatMessage (intlGet 'messages.upload_files')}}</p>
                    </div>
                    <div class="col-xs-6">
                      <hr class="steps_divider"/>
                    </div>
                    <div class="col-xs-2 text-center step_wrapper disabled_step go_to_metadata">
                        <span class="step_number" id="metadata_step_number">
                            <i class="material-icons">mode_edit</i>
                        </span>
                      <p>{{formatMessage (intlGet 'messages.edit_metadata')}}</p>
                    </div>
                    <div class="col-xs-1">&nbsp;</div>
                </div>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>