<div class="col-xs-4 format_editor_format_name truncate {{#if multi_language}}multilanguage_folder{{/if}}" title="{{#if is_language}}{{preset.readable_name}}{{else}}{{#translate preset.id}}{{/translate}}{{/if}}">
  <span class="format_preset_name">{{#if is_language}}{{preset.readable_name}}{{else}}{{#translate preset.id}}{{/translate}}{{/if}}</span>
  {{#if multi_language}}<i id="format_item_{{preset.id}}" class="toggler material-icons">expand_less</i>{{/if}}
</div>
{{#unless multi_language}}
<div class = "col-xs-8 format_slot_name">
  <div id="{{selector}}" class="format_dropzone">
    <div class="format_metadata">
    	{{#if file}}
      <div class="format_editor_options_wrapper pull-right">
        {{#if allow_edit}}
		        <span class="format_editor_replace glyphicon glyphicon-file dz-clickable" title="{{formatMessage (intlGet 'messages.replace_file')}}" aria-hidden="true"></span>
		        <span class="glyphicon glyphicon-remove format_editor_remove {{#unless preset.supplementary}}main_file_remove{{/unless}}" aria-hidden="true" title="{{formatMessage (intlGet 'messages.delete_file')}}"></span>
        {{else}}
          <a href="{{src}}" class="action-text" download="{{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}"><span class="glyphicon glyphicon-download-alt" title="{{formatMessage (intlGet 'messages.download_file')}}" aria-hidden="true"></span></a>
        {{/if}}
      </div>
      {{/if}}
    </div>
    <div class="format_editor_file_name_wrapper">
    {{#if allow_edit}}
      {{#if file}}
        <div class="format_editor_file_name truncate" title="{{file.original_filename}}">{{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}</div>
        <i class="format_editor_selected_size">({{#format_file_size file.file_size}}{{/format_file_size}})</i>
      {{else}}
          <a class="action-text add_format_button dz-clickable uppercase">+ {{formatMessage (intlGet 'messages.add')}}</a>
      {{/if}}
    {{else}}
      {{#if file}}
      <div class="format_editor_file_name truncate" title="{{file.original_filename}}">
        <a href="{{src}}" class="format_link" download="{{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}">{{#if file.original_filename}}{{file.original_filename}}{{else}}{{formatMessage (intlGet 'messages.default_filename')}}{{/if}}</a>
      </div>
      <i class="format_editor_selected_size">({{#format_file_size file.file_size}}{{/format_file_size}})</i>
      {{else}}
      <i class="format_editor_not_available">{{formatMessage (intlGet 'messages.not_available')}}</i>
      {{/if}}
    {{/if}}
    </div>
  </div>
</div>
{{/unless}}

{{#if multi_language}}<div id="format_item_{{preset.id}}_sub" class="col-xs-12 subdirectory"></div>{{/if}}
