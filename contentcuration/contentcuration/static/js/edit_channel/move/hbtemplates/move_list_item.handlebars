<div class="move_item_wrapper {{#if is_disabled}}disabled{{/if}}" {{#if is_disabled}}title="{{formatMessage (intlGet 'messages.cannot_move')}}"{{/if}}>
	{{#if is_target}}<input type="radio" id="move_item_{{node.id}}_check" class="move_checkbox" name="target_radio_list" {{#if is_disabled}}disabled{{/if}}></input>{{/if}}
	<label for="move_item_{{node.id}}_check" class="move_item {{#if is_target}}dblclick_toggle{{else}}{{#if node.children}}tog_folder{{/if}}{{/if}}" {{#unless is_disabled}}title="{{node.title}}"{{/unless}}>
		{{#unless isfolder}}<i class="material-icons icon">{{{get_icon node.kind}}}</i>{{/unless}}
		<div class="move_item_title truncate">{{node.title}}</div>
		{{#if has_descendants}}
			{{#unless is_disabled}}
				<i id="menu_toggle_{{node.id}}" class="tog_folder material-icons">arrow_drop_up</i>
			{{/unless}}
		{{/if}}
	</label>
</div>

{{#if node.children}}
	<div id="move_item_{{node.id}}_sub" class="subdirectory"><em class="default-item">{{formatMessage (intlGet 'messages.loading')}}</em></div>
{{/if}}